<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="Pesawat">

    <TextView
        android:id="@+id/detailpesawat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="DETAIL PESAWAT"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="163dp"
        android:layout_height="159dp"
        android:src="@drawable/pesawat3"
        app:layout_constraintTop_toBottomOf="@id/detailpesawat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/jenis"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/jenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Jenis: DC345"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gambar"
        app:layout_constraintTop_toBottomOf="@id/detailpesawat" />

    <TextView
        android:id="@+id/Kapasitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapasitas: 180"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/jenis"
        app:layout_constraintStart_toEndOf="@id/gambar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/Kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas: Business"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Kapasitas"
        app:layout_constraintStart_toEndOf="@id/gambar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/Harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga: Rp.500.000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Kelas"
        app:layout_constraintStart_toEndOf="@id/gambar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/editTextDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Pesawat DC345 adalah pesawat dengan kenyamanan paling sempurna
,karena tempat duduk yang empuk dan lain-lain Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/gambar"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/pesan"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="#DDF2FD"
        android:onClick="pesanButton2OnClick"
        android:text="PESAN"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDeskripsi" />


</androidx.constraintlayout.widget.ConstraintLayout>
